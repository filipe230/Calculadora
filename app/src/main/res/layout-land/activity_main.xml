<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtExpressao"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:ems="10"
                android:hint="Expressão"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txtParenteses"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:textColor="#5C00FF"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txtresultado"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="end"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/especial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/potencia"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="^" />

            <TextView
                android:id="@+id/fatorial"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="!" />

            <TextView
                android:id="@+id/porcentagem"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="%" />

            <TextView
                android:id="@+id/raiz"
                style="@style/Operadores"
                android:text="√" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnesp"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="↑" />

            <TextView
                android:id="@+id/Limpar"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="C" />

            <TextView
                android:id="@+id/Abrirparenteses"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text="(" />

            <TextView
                android:id="@+id/Fecharparenteses"
                style="@style/Operadores"
                android:layout_height="match_parent"
                android:text=")" />

            <TextView
                android:id="@+id/Dividir"
                style="@style/Operadores"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Num7"
                style="@style/Numeros"
                android:text="7" />

            <TextView
                android:id="@+id/Num8"
                style="@style/Numeros"
                android:text="8" />

            <TextView
                android:id="@+id/Num9"
                style="@style/Numeros"
                android:text="9" />

            <TextView
                android:id="@+id/Multiplicaçao"
                style="@style/Operadores"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Num4"
                style="@style/Numeros"
                android:text="4" />

            <TextView
                android:id="@+id/Num5"
                style="@style/Numeros"
                android:text="5" />

            <TextView
                android:id="@+id/Num6"
                style="@style/Numeros"
                android:text="6" />

            <TextView
                android:id="@+id/Subtraçao"
                style="@style/Operadores"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Num1"
                style="@style/Numeros"
                android:text="1" />

            <TextView
                android:id="@+id/Num2"
                style="@style/Numeros"
                android:text="2" />

            <TextView
                android:id="@+id/Num3"
                style="@style/Numeros"
                android:text="3" />

            <TextView
                android:id="@+id/Soma"
                style="@style/Operadores"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ponto"
                style="@style/Numeros"
                android:text="." />

            <TextView
                android:id="@+id/txtnum0"
                style="@style/Numeros"
                android:clickable="true"
                android:enabled="true"
                android:text="0" />

            <ImageView
                android:id="@+id/Back"
                style="@style/Numeros"
                android:scaleType="center"
                android:src="@drawable/backspace"
            />

            <TextView
                android:id="@+id/Calcular"
                style="@style/Operadores"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>